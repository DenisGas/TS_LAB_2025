{
  "compilerOptions": {
   "outDir": "SHABLON/dist",
    "target": "ES2020",
    
    "module": "ESNext",        
    "moduleResolution": "Node",
    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "rootDir": "./src",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}